<% if flash[:my_errors] %>
<% flash[:my_errors].each do |e|%>
<p><%= e %></p>

<% end %>
<% end %>



<%= form_for @scientist do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :field_of_study %>
<%= f.text_field :field_of_study %>

<%= f.fields_for :planets, @scientist.planets.build do |f| %>
<%= f.label :name, value: "Planet Name" %>
<%= f.text_field :name %>
<%= f.label :distance_from_earth %>
<%= f.text_field :distance_from_earth %>
<%= f.label :nearest_star %>
<%= f.text_field :nearest_star %>
<%= f.submit %>
<% end %>

<% end %>